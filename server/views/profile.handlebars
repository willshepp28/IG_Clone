<div class="container mgTp-50px">
    <div class="row">
        <div class="col-md-3">
        
            {{#user}} 

            <div class=" profilePic_Container">
                <img src="{{profilePic}}" alt="" class="rounded-circle img-fluid border1pxef profilePicture" >
            </div>
            

        </div>
        <!-- Button trigger modal -->

        <div class="col-lg-8 profileInfo">
            

            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <h1 class="profileUsername">{{username}}</h1>
                    </div>
                    {{/user}}
                    <div class="col-md-8 col-sm-12">
                        {{#if user.follower}} {{!-- if user is already following user then the buton should say following, otherwise it should say follow
                        --}} 
                        

                        {{!-- {{#user}} --}}
                        {{#if user.isFollowing}}
                        {{#user}}
                        <form action="/following/{{id}}" method="post">
                            <button type="submit" class="btn none">
                                Following
                            </button>
                        </form>
                        {{/user}}
                        
                        {{else if user.isPending}}
                        {{#user}}
                                 <form action="/following/{{id}}" method="post">
                            <button type="submit" class="btn btn-success">
                                Pending
                            </button>
                        </form>
                        {{/user}}
                        {{else}}
                        {{#user}}
                                 <form action="/following/{{id}}" method="post">
                            <button type="submit" class="btn followBtn">
                                Follow
                            </button>
                        </form>
                        {{/user}}
                        {{/if}}
                        {{!-- {{/user}} --}}
                    
                        
                        {{else}} {{!-- check to see if following --}}






                        <div class="container">

                            <div class="row profileOptions">
                                <div class="col-md-5 col-sm-6 col-12">
                                    <button type="button" class="btn btn-success mx-auto" data-toggle="modal" data-target="#exampleModal">
                                        Create a Post
                                    </button>
                                </div>

                                <div class="col-md-5 col-sm-6 col-12">
                                    <a href="/profilePic" class="btn btn-primary mx-auto">
                                        Change Profile Picture
                                    </a>
                                </div>

                            </div>
                        </div>



                        {{/if}}
                    </div>
                </div>

                <div class="row mgTp-40px userStats">
                    <div class="col-lg-2 col-md-3 col-4">
                        {{#user}}
                        <p><strong>{{postCount}}</strong> posts</p>
                        
                        </div>
                    <div class="col-lg-2 col-md-3 col-4">
                        <p> <strong>{{followerCount}}</strong> followers</div></p>
                       
                    <div class="col-lg-2 col-md-3 col-4">
                        <p><strong>{{followingCount}}</strong> following</div></p>
                        {{/user}}
                </div>
            </div>

        </div>
    </div>
</div>
</div>


<div class="container mgTp-100px">

    <div class="row border_grey1 pblack-container ">
        <div class="col-md-1 col-3 mx-auto">
            <p class="text-center p-black border_black1 ">POSTS</p>
        </div>
    </div>
    <div class="row">

        {{#each user_posts}}
        <div class="col-md-4 col-4 mgBt-28px">

            <a href="/post/{{id}}">
                <img src="{{photo}}" alt="" class="height-293px img-fluid">
            </a>
        </div>
        {{/each}}
    </div>
</div>




<!-- Create Post Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Create Post</h4>
            </div>
            <form action="/addPost" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Link to image</label>
                        <input type="file" name="photo" class="form-control" placeholder="Upload a Image">
                    </div>
                    <div class="form-group">
                        <label>Add a Caption</label>
                        <textarea class="form-control" name="caption" placeholder="Page Body"></textarea>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
            </form>
            </div>
        </div>
    </div>